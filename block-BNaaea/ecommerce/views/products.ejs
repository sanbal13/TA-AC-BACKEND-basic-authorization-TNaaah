<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MyProducts</title>
  <%- include('partials/includes') %>
</head>
<body>
        <%- include('partials/header') %>
      <main>       
            <section class="products-list container">
                <% var name = user ? user.name : 'Guest' %>
                  <h3>Hello <%= name %>!</h3>                           
                <div class="display-products"> <% if(products.length > 0) { %>
                  <ol class="flex cover">
                      <% products.forEach((product, index) => { %>
                       <li class="flex-19 product-card-brief">
                           <ul>
                            <small>
                              Posted by <strong><%= product.name %></strong> on    
                              <%= String(product.createdAt).slice(0, 16) %><br>   
                            </small> 
                              <h4 class="product-brief-heading"><%= product.title %></h4>
                              
                              <p><%= product.description %></p>                
                              <img src="data:image/<%= product.image.contentType %>;base64,
                              <%= product.image.data.toString('base64') %>">      
                               <a href='/products/<%= product.slug %>' class="btn card-btn">Show Detail</a>                    
                           </ul> 
                       </li>
                      <% }) %>
                  </ol>
               <% }  else {  %>
                 <h3>No Products Present</h3>
               <% } %>         
                    </div>
                   </section>
              </main>
        <%- include('partials/footer') %>
</body>
</html>